            @Html.EditorFor(model => model.IdNetUser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdNetUser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
