@model BancoLosPatitos.Models.Caja

@{
    ViewBag.Title = "Editar";
}

<h2 class="clearfix" style="margin-bottom:12px;">Editar Caja</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.IdCaja)
    @Html.HiddenFor(m => m.IdComercio)

    <div class="form-card">

        <div class="form-row">
            <div class="form-term">Nombre</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Descripción</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Teléfono SINPE</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.TelefonoSINPE, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TelefonoSINPE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Fecha de modificación</div>
            <div class="form-value">
                <span class="as-text">
                    @Model.FechaDeModificacion.ToString("dd/MM/yyyy HH:mm")
                </span>
                @Html.HiddenFor(m => m.FechaDeModificacion)
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Estado</div>
            <div class="form-value">
                @Html.DropDownListFor(m => m.Estado,
                    new SelectList(new[] {
                        new { Value = 1, Text = "Activo" },
                        new { Value = 0, Text = "Inactivo" }
                    }, "Value", "Text", Model.Estado),
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="form-actions">
        <input type="submit" value="Guardar Cambios" class="btn btn-outline-success" />
        <span class="spacer"></span> 

        @Html.ActionLink("← Regresar", "Index", "Cajas",new { idComercio = Model.IdComercio },
            new
                {
                @class = "btn",
                style = "margin-left:auto; border:1px solid #666; color:#666; background:#fff; font-weight:600; border-radius:10px; padding:6px 14px;"
            }
        )
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
