@model BancoLosPatitos.Models.ConfiguracionComercio

@{
    ViewBag.Title = "Configurar Comercio";
}

<h2>Configurar Comercio</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Id Comercio
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdComercio, (SelectList)ViewBag.IdComercio, "Seleccione un comercio", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdComercio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tipo de Configuracion
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoConfiguracion, (SelectList)ViewBag.TipoConfiguracion, "Seleccione un tipo de configuracion", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoConfiguracion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comision, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comision, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comision, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar configuración" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a lista de configuración", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
