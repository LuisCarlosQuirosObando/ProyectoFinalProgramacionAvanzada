@model IEnumerable<BancoLosPatitos.Models.Sinpe>
@{
    ViewBag.Title = "SINPE";
    var telefonoActual = ViewBag.Telefono as string;
    var idCaja = ViewBag.IdCaja as int?;
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">SINPES</h1>
</div>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">@TempData["mensaje"]</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Info != null)
{
    <div class="alert alert-info">@ViewBag.Info</div>
}

@if (!String.IsNullOrWhiteSpace(telefonoActual))
{
    <h5 class="text-primary mb-3">SINPE de la caja: @telefonoActual</h5>
}

<div class="row align-items-center mb-3">
    <div class="col-md-6">
        @using (Html.BeginForm("Index", "Sinpes", FormMethod.Get))
        {
            <div class="form-inline">
                <label for="telefono" class="mr-2">Buscar SINPE (teléfono de caja):</label>
                <input type="text" id="telefono" name="telefono" class="form-control mr-2" value="@telefonoActual" placeholder="Teléfono" required />
                <button type="submit" class="btn btn-success">Buscar</button>
            </div>
        }
    </div>

    <div class="col-md-6 text-end">
        @if (User.IsInRole("Administrador"))
        {
            @Html.ActionLink("Registrar Nuevo SINPE", "Create", "Sinpes",
                idCaja.HasValue ? new { idCaja = idCaja.Value } : null,
                new { @class = "btn btn-outline-success" })
        }
    </div>
</div>

<table class="table">
    <tr>
        <th>Teléfono origen</th>
        <th>Nombre origen</th>
        <th>Teléfono destinatario</th>
        <th>Nombre destinatario</th>
        <th>Monto</th>
        <th>Descripción</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TelefonoOrigen</td>
            <td>@item.NombreOrigen</td>
            <td>@item.TelefonoDestinatario</td>
            <td>@item.NombreDestinatario</td>
            <td>@item.Monto</td>
            <td>@item.Descripcion</td>
            <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@(item.Estado == 1 ? "Sincronizado" : "No sincronizado")</td>
            <td>
                @if (item.Estado == 0 && (User.IsInRole("Administrador") || User.IsInRole("Cajero")))
                {
                    using (Html.BeginForm("SincronizarSinpe", "Sinpes", FormMethod.Post, new { style = "display:inline;" }))
                    {
                        @Html.Hidden("id", item.IdSinpe)
                        <button type="submit" class="btn btn-sm btn-success">Sincronizar</button>
                    }
                }
                else
                {
                    <span class="text-muted">✔</span>
                }
            </td>
        </tr>
    }
</table>

<!-- Acciones SINPE por medio de la API -->
<div style="border:1px solid #2e7d32; border-radius:10px; padding:12px; margin-top:12px;">
    <div style="font-weight:700; color:#2e7d32; margin-bottom:10px;">
        Acciones SINPE por medio de la API
    </div>

    <div style="display:flex; gap:10px; flex-wrap:wrap;">
        @Html.ActionLink("Consultar SINPE API", "Consultar", "Sinpes", null,
            new { @class = "btn", style = "border:1px solid #2e7d32; color:#2e7d32; background:#fff; font-weight:600; border-radius:10px; padding:6px 14px;" })
        @Html.ActionLink("Sincronizar SINPE API", "Sincronizar", "Sinpes", null,
            new { @class = "btn", style = "border:1px solid #2e7d32; color:#2e7d32; background:#fff; font-weight:600; border-radius:10px; padding:6px 14px;" })
        @Html.ActionLink("Recibir SINPE API", "Recibir", "Sinpes", null,
            new { @class = "btn", style = "border:1px solid #2e7d32; color:#2e7d32; background:#fff; font-weight:600; border-radius:10px; padding:6px 14px;" })
    </div>
</div>

@Html.ActionLink("← Regresar", "Index", "Comercios", null,
    new { @class = "btn", style = "border:1px solid #666; color:#666; background:#fff; font-weight:600; border-radius:10px; padding:6px 14px;" })
