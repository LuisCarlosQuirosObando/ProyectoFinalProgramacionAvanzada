@model BancoLosPatitos.Models.Comercio
@{
    ViewBag.Title = "Detalles";
    var tipoId = Model.TipoIdentificacion switch
    {
        1 => "Física",
        2 => "Jurídica",
        _ => "No especifica"
    };
    var tipoComercio = Model.TipoDeComercio switch
    {
        1 => "Restaurantes",
        2 => "Supermercados",
        3 => "Ferreterías",
        _ => "Otros"
    };
}

<style>
    /* Tarjeta */
    .detail-card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        overflow: hidden; /* evita que se vea el borde bajo los radios */
    }

    /* Filas */
    .detail-row {
        display: flex;
        border-bottom: 1px solid #f1f5f9;
    }

        .detail-row:last-child {
            border-bottom: 0;
        }

    /* Celdas */
    .detail-term,
    .detail-value {
        padding: 12px 16px;
    }

    /* Columna izquierda (títulos) en gris claro */
    .detail-term {
        min-width: 260px;
        background: #e5e7eb; /* gris claro (Gray 200) */
        color: #1f2937; /* texto gris oscuro */
        font-weight: 600;
        padding: 12px 16px;
        border-right: 1px solid #d1d5db; /* separador sutil */
    }

    /* (opcional) rayado muy suave en la columna de valores */
    .detail-row:nth-child(odd) .detail-value {
        background: #fafafa;
    }

    /* Redondeo en la primera y última fila, solo del lado izquierdo */
    .detail-row:first-child .detail-term {
        border-top-left-radius: 8px;
    }

    .detail-row:last-child .detail-term {
        border-bottom-left-radius: 8px;
    }

    /* Columna derecha  */
    .detail-value {
        flex: 1;
        color: #111827; /* casi negro */
        background: #fff; /* explícito por si cambias el fondo del card */
    }
</style>

<h2 class="clearfix" style="margin-bottom:12px;">
    <span>Detalles Comercio</span>
    <span class="pull-right">
        @Html.ActionLink(
            "Ver cajas",
            "Index", "Cajas",
            new { idComercio = Model.IdComercio },
            new { @class = "btn btn-primary", style = "margin-right:8px;" })


    </span>
</h2>

<div class="detail-card">
    <div class="detail-row">
        <span class="detail-term">Identificación:</span>
        <span class="detail-value">@Model.Identificacion</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Tipo de identificación:</span>
        <span class="detail-value">@tipoId</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Nombre:</span>
        <span class="detail-value">@Model.Nombre</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Tipo de comercio:</span>
        <span class="detail-value">@tipoComercio</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Teléfono:</span>
        <span class="detail-value">@Model.Telefono</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Correo electrónico:</span>
        <span class="detail-value">@Model.CorreoElectronico</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Dirección:</span>
        <span class="detail-value">@Model.Direccion</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Fecha de registro:</span>
        <span class="detail-value">@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Fecha de modificación:</span>
        <span class="detail-value">@Model.FechaDeModificacion.ToString("dd/MM/yyyy HH:mm")</span>
    </div>

    <div class="detail-row">
        <span class="detail-term">Estado:</span>
        <span class="detail-value">
            @if (Model.Estado == 1)
            {
                <span class="badge badge-success">Activo</span>
            }
            else
            {
                <span class="badge badge-secondary">Inactivo</span>
            }
        </span>
    </div>
</div>
@Html.ActionLink("← Regresar", "Index", "Comercios", null,
    new
         {
        @class = "btn",
        style = "border:1px solid #6c757d; color:#6c757d; background:#fff; border-radius:.5rem; padding:.5rem 1rem;"
    })