@model BancoLosPatitos.Models.Comercio

@{
    ViewBag.Title = "Editar";
}

<h2 class="clearfix" style="margin-bottom:12px;">Editar Comercio</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @* IDs y campos que no se editan *@
    @Html.HiddenFor(m => m.IdComercio)
    @Html.HiddenFor(m => m.Identificacion)
    @Html.HiddenFor(m => m.TipoIdentificacion)

    <div class="form-card">

        <div class="form-row">
            <div class="form-term">Nombre</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", maxlength = "120" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Tipo de comercio</div>
            <div class="form-value">
                @Html.DropDownListFor(
                    m => m.TipoDeComercio,
                    (SelectList)ViewBag.TiposDeComercios,
                    "Seleccione el tipo de comercio",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TipoDeComercio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Teléfono</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "tel", maxlength = "20" })
                @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Correo electrónico</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control", type = "email", maxlength = "150" })
                @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Dirección</div>
            <div class="form-value">
                @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", maxlength = "250" })
                @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Fecha de registro</div>
            <div class="form-value">
                <span class="as-text">@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</span>
                @Html.HiddenFor(m => m.FechaDeRegistro)
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Fecha de modificación</div>
            <div class="form-value">
                <span class="as-text">@Model.FechaDeModificacion.ToString("dd/MM/yyyy HH:mm")</span>
                @Html.HiddenFor(m => m.FechaDeModificacion)
            </div>
        </div>

        <div class="form-row">
            <div class="form-term">Estado</div>
            <div class="form-value">
                @Html.DropDownListFor(
                    m => m.Estado,
                    (SelectList)ViewBag.Estados,
                    "Seleccione el estado",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="form-actions">
        <input type="submit" value="Guardar Cambios" class="btn btn-outline-success" />
        <span class="spacer"></span>
        @Html.ActionLink(
            "← Regresar",
            "Index",
            "Comercios",
            null,
            new
                 {
                @class = "btn",
                style = "margin-left:auto; border:1px solid #666; color:#666; background:#fff;" +
                         "font-weight:600; border-radius:10px; padding:6px 14px;"
            })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
